<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ProlifeActivity"
    android:background="@drawable/profile_activity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_profile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/profile_image"
            android:id="@+id/visit_prolife_image"/>

        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/proges_dialog_profile"
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:indeterminateDrawable="@drawable/progress_bar"
            android:indeterminateDuration="@android:integer/config_longAnimTime" />
    </FrameLayout>






        <TextView
            android:layout_below="@+id/fragment_profile"
            android:id="@+id/visit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Usuario"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"
            />



        <TextView
            android:id="@+id/visit_prolife_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado de Usuario"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_below="@+id/visit_user_name"
            android:textColor="#fff"

            />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_message_request_button"
        android:layout_below="@id/visit_prolife_status"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button_background"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Enviar Solicitud"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/decline_message_request_button"
        android:layout_below="@id/send_message_request_button"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:textColor="@android:color/background_light"
        android:background="@drawable/button_background"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Cancelar mensaje"
        android:textAllCaps="false"
        android:visibility="invisible"/>




    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerAnuncio"/>



</RelativeLayout>