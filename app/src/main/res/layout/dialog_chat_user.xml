<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">


        <ImageView
            android:id="@+id/img_user_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/gradient_user"/>
        <TextView
            android:id="@+id/nombre_user_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE USUARIO"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        >

        <ImageView
            android:id="@+id/img_chat_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_chat_black_24dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:tint="@color/white"
            />

        <ImageView
            android:id="@+id/img_call_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_call"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:tint="@color/white"
            />

        <ImageView
            android:id="@+id/img_videocall_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_llamada"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/img_info_user"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:tint="@color/white" />


    </LinearLayout>

</LinearLayout>