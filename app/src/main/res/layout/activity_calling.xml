<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.CallingActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/profile_image"
        android:scaleType="centerCrop"
        android:id="@+id/profile_image_calling"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:gravity="center"
        android:maxLines="5"
        android:textStyle="bold"
        android:layout_above="@+id/txt"
        android:id="@+id/name_calling"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llamando..."
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:gravity="center"
        android:maxLines="5"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/linear_layout1"
        android:id="@+id/txt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:id="@+id/linear_layout1">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/make_call"
            android:layout_marginRight="80dp"
            android:id="@+id/make_call"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="110dp"
            android:layout_height="105dp"
            android:src="@drawable/cancel_call"
            android:id="@+id/cancel_call"

            />

    </LinearLayout>


</RelativeLayout>