<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:text="Puedes escojer el color para tus mensajes"/>
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color_morado"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color_morado_message_sender"
                        />


                    <ImageView
                        android:id="@+id/color_verde"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color_verde_personalizao_message"
                        />

                    <ImageView
                        android:id="@+id/color_amarillo"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color_amarillo_personalizado_message"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color_celeste"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color_azul_personalizado_message"
                        />

                    <ImageView
                        android:id="@+id/color_azul"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color_azul_oscuro_personalizado_message"
                        />

                    <ImageView
                        android:id="@+id/color_rosa"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color_rosa_personalizado_message"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color_defecto"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/sender_messages_layout"
                        />
                    <ImageView
                        android:id="@+id/color_rojo_imagen"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color_rojo_personalizado_messages"
                        />
                    <ImageView
                        android:id="@+id/color_blanco_mensaje"
                        android:layout_marginStart="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/color_blanco_personalizado"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cambiar el Color Texto"
                        android:textColor="@android:color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/color_blanco_texto"
                        android:layout_marginStart="1dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/color_blanco"/>
                    <ImageView
                        android:id="@+id/color_rojo_texto"
                        android:layout_marginStart="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#FF0000"/>
                    <ImageView
                        android:id="@+id/color_amarillo_texto"
                        android:layout_marginStart="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#FFEB3B"/>
                    <ImageView
                        android:id="@+id/color_azul_texto"
                        android:layout_marginStart="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#3F51B5"/>
                    <ImageView
                        android:id="@+id/color_verde_texto"
                        android:layout_marginStart="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#4CAF50"/>
                    <ImageView
                        android:id="@+id/colo_negro_texto"
                        android:layout_marginStart="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#000000"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/presentacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/sender_messages_layout"
                    android:text="Hola como estas?"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>